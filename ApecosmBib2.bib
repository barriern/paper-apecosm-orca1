  annotation = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1029/1999JC900135},
  file = {/home/barrier/Zotero/storage/7M2V5HER/Murtugudde et al. - 1999 - Ocean color variability of the tropical Indo-Pacif.pdf;/home/barrier/Zotero/storage/S7AUTVY7/1999JC900135.html}
}

