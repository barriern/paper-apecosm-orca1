@article{colasHeatBalanceEddies2012,
  title = {Heat Balance and Eddies in the {{Peru-Chile}} Current System},
  author = {Colas, Fran{\c c}ois and McWilliams, James C. and Capet, Xavier and Kurian, Jaison},
  year = {2012},
  month = jul,
