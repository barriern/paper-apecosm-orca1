@article{durantTimingAbundanceKey2005,
  title = {Timing and Abundance as Key Mechanisms Affecting Trophic Interactions in Variable Environments},
  author = {Durant, Jo{\"e}l M. and Hjermann, Dag {\O} and Anker-Nilssen, Tycho and Beaugrand, Gr{\'e}gory and Mysterud, Atle and Pettorelli, Nathalie and Stenseth, Nils Chr},
  year = {2005},
  month = sep,
  journal = {Ecology Letters},
  volume = {8},
  number = {9},
  pages = {952--958},
  issn = {1461-0248},
  doi = {10.1111/j.1461-0248.2005.00798.x},
  abstract = {Climatic changes are disrupting otherwise tight trophic interactions between predator and prey. Most of the earlier studies have primarily focused on the temporal dimension of the relationship in the framework of the match\textendash mismatch hypothesis. This hypothesis predicts that predator's recruitment will be high if the peak of the prey availability temporally matches the most energy-demanding period of the predators breeding phenology. However, the match\textendash mismatch hypothesis ignores the level of food abundance while this can compensate small mismatches. Using a novel time-series model explicitly quantifying both the timing and the abundance component for trophic relationships, we here show that timing and abundance of food affect recruitment differently in a marine (cod/zooplankton), a marine\textendash terrestrial (puffin/herring) and a terrestrial (sheep/vegetation) ecosystem. The quantification of the combined effect of abundance and timing of prey on predator dynamics enables us to come closer to the mechanisms by which environment variability may affect ecological systems.},
  langid = {english},
  keywords = {Fish,mammals,match–mismatch,plankton,seabirds,vegetation}
}

@article{eakin20142017Globalscale2019,
  title = {The 2014\textendash 2017 Global-Scale Coral Bleaching Event: Insights and Impacts},
  shorttitle = {The 2014\textendash 2017 Global-Scale Coral Bleaching Event},
  author = {Eakin, C. Mark and Sweatman, Hugh P. A. and Brainard, Russel E.},
  year = {2019},
  month = aug,
  journal = {Coral Reefs},
  volume = {38},
  number = {4},
  pages = {539--545},
  issn = {1432-0975},
  doi = {10.1007/s00338-019-01844-2},
  abstract = {2014\textendash 2017 was an unprecedented period of successive record-breaking hot years, which coincided with the most severe, widespread, and longest-lasting global-scale coral bleaching event ever recorded. The 2014\textendash 2017 global-scale coral bleaching event (GCBE) resulted in very high coral mortality on many reefs, rapid deterioration of reef structures, and far-reaching environmental impacts. Through the papers in this special issue of Coral Reefs entitled The 2014\textendash 2017 Global Coral Bleaching Event: Drivers, Impacts, and Lessons Learned, as well as papers published elsewhere, we have a good analysis of the 2014\textendash 2017 GCBE and its impacts. These studies have provided key insights into how climate change-driven marine heatwaves are destroying coral reef ecosystems: (a) The 2014\textendash 2017 GCBE is unique in the satellite record in its spatial scale, duration, intensity, and repetition of bleaching. (b) The impacts have been the most severe ever seen at many reefs. (c) Timing of observations matters and needs to be considered during the analysis of impacts. (d) On both global and local scales, the intensity of heat stress and impacts varied. (e) We continue to see important differences among and within coral taxa, with key roles played by algal symbionts and the microbiome. (f) Heat stress and bleaching both play a role in subsequent disease, which plays a key role in mortality. (g) Impacts ripple far beyond corals, with significant changes to the fish and invertebrate community that may last decades. (h) The structure of both individual coral's skeletons and entire reefs has been eroded much more quickly than previously realized. (i) The 2014\textendash 2017 GCBE provided little support for the proposed ``lifeboat'' hypothesis, whereby deep or mesophotic reefs serve as a means of coral reef salvation. (j) While marine protected areas (MPAs) provide protection from local stressors, they not only do not protect reefs from global-scale stressors, but also here is also little evidence they provide significant resilience.},
  langid = {english},
  file = {/home/barrier/Zotero/storage/D4H8E8VI/Eakin et al. - 2019 - The 2014–2017 global-scale coral bleaching event .pdf}
}

