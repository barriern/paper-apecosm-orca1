@article{gomezENSOinducedCovariabilitySalinity2019,
  title = {{{ENSO-induced}} Co-Variability of {{Salinity}}, {{Plankton Biomass}} and {{Coastal Currents}} in the {{Northern Gulf}} of {{Mexico}}},
  author = {Gomez, Fabian A. and Lee, Sang-Ki and Hernandez, Frank J. and Chiaverano, Luciano M. and {Muller-Karger}, Frank E. and Liu, Yanyun and Lamkin, John T.},
  year = {2019},
  month = jan,
  journal = {Scientific Reports},
