@article{lanEffectsClimateChange2021,
  title = {Effects of {{Climate Change}} in {{Marine Ecosystems Based}} on the {{Spatiotemporal Age Structure}} of {{Top Predators}}: {{A Case Study}} of {{Bigeye Tuna}} in the {{Pacific Ocean}}},
