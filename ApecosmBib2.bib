@article{lengaigneOceanResponseMarch2002,
  title = {Ocean Response to the {{March}} 1997 {{Westerly Wind Event}}},
  author = {Lengaigne, Matthieu and Boulanger, Jean-Philippe and Menkes, Christophe and Masson, Sebastien and Madec, Gurvan and Delecluse, Pascale},
  year = {2002},
  journal = {Journal of Geophysical Research: Oceans},
  volume = {107},
