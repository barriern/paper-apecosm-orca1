@article{murtuguddeOceanColorVariability1999,
  title = {Ocean Color Variability of the Tropical {{Indo-Pacific}} Basin Observed by {{SeaWiFS}} during 1997\textendash 1998},
  author = {Murtugudde, Ragu G. and Signorini, Sergio R. and Christian, James R. and Busalacchi, Antonio J. and McClain, Charles R. and Picaut, Joel},
