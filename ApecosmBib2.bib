}

@article{oliveros-ramosSequentialApproachCalibrate2017,
  title = {A Sequential Approach to Calibrate Ecosystem Models with Multiple Time Series Data},
  author = {{Oliveros-Ramos}, Ricardo and Verley, Philippe and Echevin, Vincent and Shin, Yunne-Jai},
  year = {2017},
