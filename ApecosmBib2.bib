@article{lheureuxObservingPredicting20152017,
  title = {Observing and {{Predicting}} the 2015/16 {{El Ni\~no}}},
  author = {L'Heureux, Michelle L. and Takahashi, Ken and Watkins, Andrew B. and Barnston, Anthony G. and Becker, Emily J. and Liberto, Tom E. Di and Gamble, Felicity and Gottschalck, Jon and Halpert, Michael S. and Huang, Boyin and {Mosquera-V{\'a}squez}, Kobi and Wittenberg, Andrew T.},
