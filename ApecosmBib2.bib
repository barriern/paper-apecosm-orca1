@article{christianBiogeochemicalModellingTropical2001,
  title = {Biogeochemical Modelling of the Tropical {{Pacific Ocean}}. {{I}}: {{Seasonal}} and Interannual Variability},
  shorttitle = {Biogeochemical Modelling of the Tropical {{Pacific Ocean}}. {{I}}},
  author = {Christian, J. R. and Verschell, M. A. and Murtugudde, R. and Busalacchi, A. J. and McClain, C. R.},
  year = {2001},
  month = jan,
  journal = {Deep Sea Research Part II: Topical Studies in Oceanography},
  series = {The {{US JGOFS Synthesis}} and {{Modeling Project}}: {{Phase}} 1},
  volume = {49},
  number = {1},
