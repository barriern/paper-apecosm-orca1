@article{tittensorProtocolIntercomparisonMarine2018,
  title = {A Protocol for the Intercomparison of Marine Fishery and Ecosystem Models: {{Fish-MIP}} v1.0},
  shorttitle = {A Protocol for the Intercomparison of Marine Fishery and Ecosystem Models},
  author = {Tittensor, Derek P. and Eddy, Tyler D. and Lotze, Heike K. and Galbraith, Eric D. and Cheung, William and Barange, Manuel and Blanchard, Julia L. and Bopp, Laurent and {Bryndum-Buchholz}, Andrea and B{\"u}chner, Matthias and Bulman, Catherine and Carozza, David A. and Christensen, Villy and Coll, Marta and Dunne, John P. and Fernandes, Jose A. and Fulton, Elizabeth A. and Hobday, Alistair J. and Huber, Veronika and Jennings, Simon and Jones, Miranda and Lehodey, Patrick and Link, Jason S. and Mackinson, Steve and Maury, Olivier and Niiranen, Susa and {Oliveros-Ramos}, Ricardo and Roy, Tilla and Schewe, Jacob and Shin, Yunne-Jai and Silva, Tiago and Stock, Charles A. and Steenbeek, Jeroen and Underwood, Philip J. and Volkholz, Jan and Watson, James R. and Walker, Nicola D.},
